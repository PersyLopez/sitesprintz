    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
      :root {
        /* Modern Dark Theme with Imagery */
        --primary-gradient: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
        --secondary-gradient: linear-gradient(135deg, #14b8a6 0%, #0d9488 100%);
        --dark-gradient: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        --success-gradient: linear-gradient(135deg, #10b981 0%, #059669 100%);
        --warm-gradient: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);

        /* Solid Colors */
        --primary-color: #06b6d4;
        --primary-dark: #0891b2;
        --primary-light: #22d3ee;

        /* Dark Theme Colors */
        --bg-dark: #0f172a;
        --bg-darker: #020617;
        --bg-card: #1e293b;
        --bg-elevated: #334155;

        /* Text Colors for Dark Theme */
        --text-light: #f8fafc;
        --text-medium: #cbd5e1;
        --text-muted: #94a3b8;
        --border-dark: #334155;

        /* Shadow System - Dark with cyan glow */
        --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.4);
        --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.5);
        --shadow-lg: 0 10px 25px rgba(0, 0, 0, 0.6);
        --shadow-xl: 0 20px 40px rgba(0, 0, 0, 0.7);
        --shadow-glow: 0 0 40px rgba(6, 182, 212, 0.4);
        --shadow-glow-sm: 0 0 20px rgba(6, 182, 212, 0.3);
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        color: var(--text-light);
        background: var(--bg-dark);
        background-image:
          radial-gradient(at 20% 30%, rgba(6, 182, 212, 0.15) 0px, transparent 50%),
          radial-gradient(at 80% 70%, rgba(20, 184, 166, 0.15) 0px, transparent 50%),
          url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse"><path d="M 20 0 L 0 0 0 20" fill="none" stroke="rgba(255,255,255,0.03)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
        line-height: 1.6;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        min-height: 100vh;
      }
      
      @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
      }
      
      @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
      }
      
      @keyframes slideInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
      }
      
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      
      .landing-hero {
        background: linear-gradient(135deg, #020617 0%, #0f172a 50%, #1e293b 100%);
        background-image:
          linear-gradient(135deg, rgba(6, 182, 212, 0.1) 0%, transparent 50%),
          url('data:image/svg+xml,<svg width="200" height="200" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="dots" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="2" cy="2" r="1" fill="rgba(6,182,212,0.2)"/></pattern></defs><rect width="200" height="200" fill="url(%23dots)"/></svg>');
        color: var(--text-light);
        padding: 100px 20px 120px;
        text-align: center;
        position: relative;
        overflow: hidden;
        border-bottom: 1px solid rgba(6, 182, 212, 0.2);
      }
      
      .landing-hero::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 50%;
        height: 200%;
        background: radial-gradient(circle, rgba(6, 182, 212, 0.15) 0%, transparent 70%);
        animation: float 8s ease-in-out infinite;
        pointer-events: none;
      }
      
      .landing-hero::after {
        content: '';
        position: absolute;
        bottom: -50%;
        left: -10%;
        width: 50%;
        height: 200%;
        background: radial-gradient(circle, rgba(6, 182, 212, 0.1) 0%, transparent 70%);
        animation: float 10s ease-in-out infinite reverse;
        pointer-events: none;
      }
      
      .hero-content {
        max-width: 800px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
      }
      
      .landing-hero h1 {
        font-size: clamp(2.5rem, 5vw + 1rem, 4rem);
        margin: 0 0 24px 0;
        font-weight: 800;
        line-height: 1.1;
        letter-spacing: -0.02em;
        text-shadow: 0 2px 20px rgba(0,0,0,0.2);
      }
      
      .landing-hero p {
        font-size: 1.25rem;
        margin: 0 0 40px 0;
        opacity: 0.95;
        line-height: 1.6;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
        font-weight: 400;
      }
      
      .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: rgba(6, 182, 212, 0.2);
        backdrop-filter: blur(20px);
        padding: 8px 20px;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 24px;
        border: 1px solid rgba(255,255,255,0.3);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        animation: slideInUp 0.6s ease 0.2s backwards;
      }
      
      .cta-buttons {
        display: flex;
        gap: 16px;
        justify-content: center;
        flex-wrap: wrap;
        animation: slideInUp 0.6s ease 0.4s backwards;
      }
      
      .btn-primary-large {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        color: white;
        padding: 16px 40px;
        border: none;
        border-radius: 14px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        position: relative;
        overflow: hidden;
      }
      
      .btn-primary-large::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(95, 158, 160, 0.25), transparent);
        transition: left 0.5s;
      }
      
      .btn-primary-large:hover::before {
        left: 100%;
      }
      
      .btn-primary-large:hover {
        transform: translateY(-3px);
        box-shadow: 0 0 30px rgba(6, 182, 212, 0.5), 0 15px 50px rgba(0,0,0,0.5);
      }
      
      .btn-primary-large:active {
        transform: translateY(-1px);
      }
      
      .btn-secondary-large {
        background: rgba(255,255,255,0.1);
        backdrop-filter: blur(10px);
        color: white;
        padding: 16px 40px;
        border: 2px solid rgba(255,255,255,0.3);
        border-radius: 14px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
      }
      
      .btn-secondary-large:hover {
        background: rgba(255,255,255,0.2);
        border-color: white;
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
      }
      
      .btn-secondary-large:active {
        transform: translateY(-1px);
      }
      
      .btn-text-link {
        color: #2563eb;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.2s;
      }
      
      .btn-text-link:hover {
        color: #1d4ed8;
      }
      
      .compact-section {
        max-width: 1200px;
        margin: 0 auto;
        padding: 80px 20px;
      }
      
      .section-header-compact {
        text-align: center;
        margin-bottom: 56px;
      }
      
      .section-header-compact h2 {
        font-size: 2.5rem;
        margin: 0 0 16px 0;
        color: var(--text-light);
        font-weight: 800;
        letter-spacing: -0.02em;
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      
      .section-header-compact p {
        color: var(--text-muted);
        margin: 0;
        font-size: 1.2rem;
        font-weight: 400;
      }
      
      .steps-compact {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 32px;
      }
      
      .step-compact {
        text-align: center;
        padding: 40px 32px;
        background: white;
        border: 2px solid var(--border-light);
        border-radius: 24px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
      }
      
      .step-compact::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: var(--primary-gradient);
        transform: scaleX(0);
        transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      }
      
      .step-compact:hover::before {
        transform: scaleX(1);
      }
      
      .step-compact:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-xl);
        border-color: transparent;
      }
      
      .step-icon {
        font-size: 3.5rem;
        display: block;
        margin-bottom: 20px;
        transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      }
      
      .step-compact:hover .step-icon {
        transform: scale(1.1) rotate(-5deg);
      }
      
      .step-compact h3 {
        font-size: 1.4rem;
        font-weight: 700;
        margin: 0 0 12px 0;
        color: var(--text-dark);
      }
      
      .step-compact p {
        color: var(--text-medium);
        font-size: 1rem;
        margin: 0;
        line-height: 1.6;
      }
      
      .social-proof-compact {
        background: #f8fafc;
        padding: 40px 0;
      }
      
      .testimonials-compact {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
      }
      
      .testimonial-compact {
        background: white;
        padding: 20px;
        border-radius: 12px;
        border: 1px solid rgba(0,0,0,0.08);
        transition: all 0.2s;
      }
      
      .testimonial-compact:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(37,99,235,0.08);
      }
      
      .testimonial-compact p {
        color: #1e293b;
        font-size: 0.95rem;
        margin: 0 0 12px 0;
        line-height: 1.5;
      }
      
      .testimonial-compact cite {
        color: #64748b;
        font-size: 0.85rem;
        font-style: normal;
      }
      
      .templates-highlight {
        background: var(--bg-darker);
        background-image: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="hexagons" width="50" height="43.4" patternUnits="userSpaceOnUse" patternTransform="scale(2)"><path d="M25 0 L50 14.43 L50 28.87 L25 43.3 L0 28.87 L0 14.43 Z" fill="none" stroke="rgba(6,182,212,0.05)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23hexagons)"/></svg>');
        border-top: 1px solid var(--border-dark);
        border-bottom: 1px solid var(--border-dark);
      }
      
      .quick-templates {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 24px;
      }
      
      .quick-template-card {
        background: var(--bg-card);
        background-image: linear-gradient(135deg, rgba(6, 182, 212, 0.05) 0%, transparent 100%);
        border: 1px solid var(--border-dark);
        border-radius: 20px;
        padding: 32px 24px;
        text-align: center;
        text-decoration: none;
        color: inherit;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
      }
      
      .quick-template-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: var(--primary-gradient);
        opacity: 0;
        transition: opacity 0.4s;
        z-index: 0;
      }
      
      .quick-template-card:hover::before {
        opacity: 0.05;
      }
      
      .quick-template-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 0 20px rgba(6, 182, 212, 0.3), var(--shadow-xl);
        border-color: var(--primary-color);
      }
      
      .template-emoji {
        font-size: 3.5rem;
        display: block;
        margin-bottom: 16px;
        transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        z-index: 1;
      }
      
      .quick-template-card:hover .template-emoji {
        transform: scale(1.2) rotate(-10deg);
      }
      
      .quick-template-card h3 {
        font-size: 1.2rem;
        font-weight: 700;
        margin: 0 0 8px 0;
        color: var(--text-light);
        position: relative;
        z-index: 1;
      }
      
      .quick-template-card p {
        font-size: 0.95rem;
        color: var(--text-muted);
        margin: 0;
        position: relative;
        z-index: 1;
      }
      
      .cta-footer {
        background: linear-gradient(135deg, #020617 0%, #0f172a 100%);
        background-image:
          linear-gradient(135deg, rgba(6, 182, 212, 0.2) 0%, transparent 100%),
          url('data:image/svg+xml,<svg width="200" height="200" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="circuit" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="2" fill="rgba(6,182,212,0.3)"/><circle cx="90" cy="90" r="2" fill="rgba(6,182,212,0.3)"/><line x1="10" y1="10" x2="90" y2="90" stroke="rgba(6,182,212,0.1)" stroke-width="1"/></pattern></defs><rect width="200" height="200" fill="url(%23circuit)"/></svg>');
        border-top: 1px solid rgba(6, 182, 212, 0.3);
        padding: 80px 20px;
        position: relative;
        overflow: hidden;
      }
      
      .cta-footer::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 60%;
        height: 200%;
        background: radial-gradient(circle, rgba(6, 182, 212, 0.15) 0%, transparent 60%);
        pointer-events: none;
      }
      
      .cta-box {
        text-align: center;
        color: white;
        max-width: 700px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
      }
      
      .cta-box h2 {
        font-size: 2.8rem;
        margin: 0 0 16px 0;
        font-weight: 800;
        letter-spacing: -0.02em;
      }
      
      .cta-box p {
        font-size: 1.25rem;
        margin: 0 0 32px 0;
        opacity: 0.95;
        line-height: 1.6;
      }
      
      .site-footer-compact {
        background: var(--bg-darker);
        color: var(--text-muted);
        border-top: 1px solid var(--border-dark);
        padding: 48px 20px;
        text-align: center;
      }
      
      .site-footer-compact p {
        margin: 0 0 20px 0;
        font-size: 1rem;
        font-weight: 500;
        color: var(--text-muted);
      }
      
      .footer-links {
        display: flex;
        gap: 32px;
        justify-content: center;
        flex-wrap: wrap;
      }
      
      .footer-links a {
        color: white;
        text-decoration: none;
        font-size: 1rem;
        font-weight: 500;
        transition: all 0.3s;
        position: relative;
      }
      
      .footer-links a::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--accent-gradient);
        transition: width 0.3s;
      }
      
      .footer-links a:hover::after {
        width: 100%;
      }
      
      .footer-links a:hover {
        color: #fff;
      }
      
      /* Hero Showcase Carousel */
      .hero-showcase {
        max-width: 1000px;
        margin: 60px auto 0;
        position: relative;
        animation: slideInUp 0.6s ease 0.6s backwards;
      }
      
      .showcase-container {
        position: relative;
        width: 100%;
        aspect-ratio: 16 / 10;
        border-radius: 24px;
        overflow: hidden;
      }
      
      .showcase-slide {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        transform: translateX(30px) scale(0.95);
        transition: all 1s cubic-bezier(0.4, 0, 0.2, 1);
        pointer-events: none;
      }
      
      .showcase-slide.active {
        opacity: 1;
        transform: translateX(0) scale(1);
        pointer-events: auto;
      }
      
      .showcase-browser {
        background: var(--bg-card);
        border: 1px solid var(--border-dark);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 30px 80px rgba(0,0,0,0.6), 0 0 30px rgba(6, 182, 212, 0.2);
        height: 100%;
        display: flex;
        flex-direction: column;
      }
      
      .browser-bar {
        background: linear-gradient(180deg, rgba(15, 27, 42, 0.95) 0%, rgba(15, 27, 42, 0.85) 100%);
        border-bottom: 1px solid var(--border-dark);
        padding: 14px 20px;
        display: flex;
        align-items: center;
        gap: 12px;
      }
      
      .browser-dots {
        display: flex;
        gap: 8px;
      }
      
      .browser-dots i {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        display: block;
        box-shadow: inset 0 1px 2px rgba(0,0,0,0.1);
      }
      
      .browser-dots i:nth-child(1) { background: #ff5f56; }
      .browser-dots i:nth-child(2) { background: #ffbd2e; }
      .browser-dots i:nth-child(3) { background: #27c93f; }
      
      .browser-url {
        background: var(--bg-darker);
        border: 1px solid var(--border-dark);
        padding: 8px 16px;
        border-radius: 8px;
        font-size: 0.85rem;
        color: var(--text-muted);
        flex: 1;
        text-align: left;
        font-weight: 500;
      }
      
      .showcase-browser iframe {
        width: 100%;
        flex: 1;
        border: none;
        background: white;
        pointer-events: none;
      }
      
      .showcase-label {
        position: absolute;
        bottom: 24px;
        left: 50%;
        transform: translateX(-50%);
        background: rgba(30, 41, 59, 0.95);
        border: 1px solid var(--border-dark);
        backdrop-filter: blur(20px);
        padding: 14px 32px;
        border-radius: 60px;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-shadow: 0 8px 32px rgba(0,0,0,0.4), 0 0 20px rgba(6, 182, 212, 0.2);
      }
      
      .showcase-label strong {
        color: var(--text-light);
        font-size: 1.1rem;
        font-weight: 700;
      }
      
      .showcase-label span {
        color: var(--text-muted);
        font-size: 0.9rem;
        margin-top: 2px;
        font-weight: 500;
      }
      
      .showcase-dots {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 32px;
      }
      
      .showcase-dots .dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: rgba(6, 182, 212, 0.3);
        border: 2px solid rgba(6, 182, 212, 0.5);
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        padding: 0;
      }
      
      .showcase-dots .dot:hover {
        background: rgba(6, 182, 212, 0.6);
        transform: scale(1.3);
        border-color: var(--primary-color);
      }
      
      .showcase-dots .dot.active {
        background: var(--primary-color);
        width: 32px;
        border-radius: 6px;
        border-color: var(--primary-color);
        box-shadow: 0 0 15px rgba(6, 182, 212, 0.5);
      }
      
      /* Pro Stats Sections */
      .pro-section {
        background: var(--bg-card);
        border: 1px solid var(--border-dark);
        border-radius: 16px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
      }
      
      .pro-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: var(--primary-gradient);
        opacity: 0;
        transition: opacity 0.4s;
        z-index: 0;
      }
      
      .pro-section:hover {
        transform: translateY(-4px);
        box-shadow: 0 0 30px rgba(6, 182, 212, 0.3), var(--shadow-xl);
        border-color: var(--primary-color);
      }
      
      .pro-section:hover::before {
        opacity: 0.05;
      }
      
      .pro-section > * {
        position: relative;
